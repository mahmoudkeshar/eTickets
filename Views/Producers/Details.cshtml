@model Producer

@{
    ViewData["Title"] = "Details of the Producer";
}







@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <style>
        body {
            background-image: url('/images/AdminDetails9.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>

    <div class="row text ">
        <div class="col-md-6 offset-2  ">
            <p>
                <h1 class="text-white-50"> <strong>Details for @Model.FullName</strong></h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" src="@Url.Content("~/images/" + Model.ProfilePictureURL)" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label text-white"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" readonly />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label text-white"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" class="control-label  text-white"></label>
                        <input asp-for="Biography" class="form-control" readonly />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between" style="margin-top: 20px;">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-outline-success float-right mb-3" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                        <a class="btn btn-outline-secondary mb-3" asp-action="Index">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {

        });
    </script>
}






@if (!User.IsInRole("Admin"))
{

<style>
    .text-dark-strong {
        color: #000 !important; 
        font-weight: bold; 
    }
</style>

<body style="background-size: cover; background-image: url('/images/Hero.jpg'); background-repeat: no-repeat; object-fit: cover;">

    <div class="row text">
        <div class="col-md-7 offset-5 mt-lg-5">
            <p>
                <h1 class="m-lg-5  text-white-50">Details for @Model.FullName</h1> <!-- Apply text-dark-strong class here -->
            </p>
            <div class="row">
                <div class="col-md-8 offset-2 mt-lg-5 ">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" src="@Url.Content("~/images/" + Model.ProfilePictureURL)" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label text-dark-strong"></label> <!-- Apply text-dark-strong class here -->
                        <input asp-for="ProfilePictureURL" class="form-control" readonly />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label text-dark-strong"></label> <!-- Apply text-dark-strong class here -->
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" class="control-label text-dark-strong"></label> <!-- Apply text-dark-strong class here -->
                        <input asp-for="Biography" class="form-control" readonly />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between" style="margin-top: 20px;">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-outline-success float-right mb-3" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                        <a class="btn btn-outline-dark mb-3" asp-action="Index">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {

            });
        </script>
    }
</body>
}