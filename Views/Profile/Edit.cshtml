@model eTickets.Models.ViewModel.RegisterVM

<style>
    .mt-5 {
        margin-top: 10rem !important;
    }
</style>
<body style="background-size: cover; background-image: url('/images/Edit1.jpg'); background-repeat: no-repeat; object-fit: cover;">

    <div class="container  " style="margin-top: 30em;margin-left: 60em;width: 50%;">
    <h1 class="text-center">Edit Profile</h1>
        <div class="card shadow p-4" style="background-color:#333;  color: #f8f9fa;">
        <form asp-action="Edit">
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" class="form-control" asp-for="FullName" placeholder="Enter your full name" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="emailAddress">Email Address</label>
                <input type="email" id="emailAddress" class="form-control" asp-for="EmailAddress" placeholder="Enter your email address" required />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Enter your password" required minlength="6" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm your password" required minlength="6" data-equalto="#password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between" style="margin-top: 20px;">
                <input type="submit" value="Update" class="btn btn-success" />
                <a class="btn btn-light " asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>
</body>
