@using eTickets.Models.ViewModel
@model RegisterVM
@{
    ViewData["Title"] = "Sign up for a new account";
}
<body style="background-size: cover; background-image: url('/images/RegisterLogin1.jpg'); background-repeat: no-repeat; object-fit: cover;">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-8">
                <div class="card shadow" style="background-color: #ccd5dd; border-radius: 10px; margin-top: 15em;">
                    <div class="card-body" style="padding: 30px;">
                        <h5 class="card-title text-center mb-4" style="font-size: 2rem;">Admin Registration</h5>

                        @if (TempData["Error"] != null)

                        {
                            <div class="alert alert-danger">
                                <span><b>Sorry!</b> - @TempData["Error"] </span>
                            </div>
                        }

                        <form asp-action="RegisterAdmin">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="FullName" class="control-label strong" style="font-size: 1.25rem;">Full Name</label>
                                <input name="FullName" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EmailAddress" class="control-label" style="font-size: 1.25rem;">Email Address</label>
                                <input name="EmailAddress" type="email" class="form-control" placeholder="Enter your email address" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label" style="font-size: 1.25rem;">Password</label>
                                <input name="Password" type="password" class="form-control" placeholder="Enter your password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label" style="font-size: 1.25rem;">Confirm Password</label>
                                <input name="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- إضافة أي حقول إضافية هنا للأدمن -->

                            <div class="form-group text-center">
                                <div class="row justify-content-center">
                                    <div class="col-md-5  mt-5">
                                        <button type="submit" class="btn btn-outline-success btn-block">Sign up as Admin</button>
                                    </div>
                                    <div class="col-md-5   mt-5">
                                        <a class="btn btn-outline-secondary btn-block" asp-controller="Movies" asp-action="Index">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
