@model NewMovieVM
@using eTickets.Models.ViewModel;

@{
    ViewData["Title"] = "Create a new movie";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body style="background-image:url('/images/Add2.jpg'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-5">
                    <div class="card-body">
                        <h4 class="card-title text-center">Create a new movie</h4>
                        <hr>

                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="StartDate" class="control-label"></label>
                                        <input asp-for="StartDate" type="date" class="form-control" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EndDate" class="control-label"></label>
                                        <input asp-for="EndDate" type="date" class="form-control" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label"></label>
                                        <input asp-for="Price" type="number" class="form-control" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ImageURL" class="control-label"></label>
                                        <input asp-for="ImageURL"  type ="file" class="form-control" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);" />
                                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CinemaId" class="control-label"></label>
                                        <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);"></select>
                                        <span asp-validation-for="CinemaId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MovieCategory" class="control-label"></label>
                                        <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);"></select>
                                        <span asp-validation-for="MovieCategory" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProducerId" class="control-label"></label>
                                        <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);"></select>
                                        <span asp-validation-for="ProducerId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="HeroIds" class="control-label"></label>
                                        <select asp-for="HeroIds" class="form-control" asp-items="ViewBag.Heroes" multiple style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);"></select>
                                        <span asp-validation-for="HeroIds" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label"></label>
                                        <textarea asp-for="Description" class="form-control" style="background-color: #f8f9fa; color: #495057; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-md-4 offset-4 text-center">
                                <img width="100%" id="ImageUrlPreview" />
                            </div>

                            <div class="form-group btn-container">
                                <button type="submit" class="btn btn-outline-success float-right mb-3" style="margin-left: 60px;">Create</button>
                                <a class="btn btn-outline-secondary mb-3" style="margin-left: 450px;" asp-action="Index">Show All</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            
    </div>

    @section Scripts {
        <script>
            $("#ImageURL").on("change", function () {
                var output = document.getElementById("ImageUrlPreview");
                output.src = $(this).val();
            })
        </script>
    }
</body>
</html>
